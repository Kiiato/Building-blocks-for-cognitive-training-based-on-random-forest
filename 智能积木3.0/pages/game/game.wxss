#game-area {
    height: 800rpx;
}

#game-area image {
    width: 100%;
    height: 100%;
}

#mode-choose{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color:rgb(0,0,0,0.5);
}

#mode-choose scroll-view {
    white-space: nowrap;
}

#mode-choose .mode {
    display: inline-block;
} 

#mode-choose image {
    width: 70vw;
    height: 80vw;
    border: 1px solid;
    margin: 0 15vw;
}


#acess {
    height: 200rpx;
}

